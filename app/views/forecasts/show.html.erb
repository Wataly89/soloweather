<div class="jumbotron jumbotron-fluid">
  <div class="container">
    <h1 class="header">Your Forecast</h1>
    <p class="lead">
    	<p id="notice"><%= notice %></p>

    	<div class="weather">
    	<p>
    	  <strong>Lat:</strong>
    	  <%= @forecast.lat %>
    	</p>

    	<p>
    	  <strong>Lng:</strong>
    	  <%= @forecast.lng %>
    	</p>

    		<div class="weather_summary">
    		The weather is:  <%= @current_weather.summary %> and the Temperature is <%= @current_weather.temperature %> degrees.
			</div>
    	<br/>
    	<br/>

    	<%= link_to 'Edit', edit_forecast_path(@forecast) %> |
    	<%= link_to 'Back', forecasts_path %>
    	</div>



    </p>
  </div>
</div>


