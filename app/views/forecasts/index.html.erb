<p id="notice"><%= notice %></p>

<div class="jumbotron jumbotron-fluid">
  <div class="container">
    <h1 class="display-4">Forecast Locations</h1>
    <p class="lead">
      <table>
        <thead>
          <tr>
            <th>Lat</th>
            <th>Lng</th>
            <th colspan="3"></th>
          </tr>
        </thead>

        <tbody>
          <% @forecasts.each do |forecast| %>
            <tr>
              <td><%= forecast.lat %></td>
              <td><%= forecast.lng %></td>
              <td><%= link_to 'Show', forecast %></td>
              <td><%= link_to 'Edit', edit_forecast_path(forecast) %></td>
              <td><%= link_to 'Destroy', forecast, method: :delete, data: { confirm: 'Are you sure?' } %></td>
            </tr>
          <% end %>
        </tbody>
      </table>

      <br>

      <%= link_to 'New Forecast', new_forecast_path %>

    </p>
  </div>
</div>

